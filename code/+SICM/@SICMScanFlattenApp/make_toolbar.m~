function make_toolbar ( self )

    % get the Â´default background from a toolbar
    t = uitoolbar(figure('Menubar','none')); drawnow; 
    jt = get(get(t,'JavaContainer'),'ComponentPeer');
    jbg = jt.getBackground();
    delete(t.Parent);
    bg = [jbg.getRed(), jbg.getGreen(), jbg.getBlue()]/255;
    tb = struct();
    
    t = uiw.widget.Toolbar('Visible','off', 'BackgroundColor', bg );
    
    % get the underlying java component to get the toolbar's background
    % color
    
    
    
    t.addSection('Lines');
    
    tb.NextLineBtn = t.addButton(...
        phutils.icons.Icon.FAS_ARROW_DOWN_24(bg), 'tb_NextLineBtn', ...
        'TooltipString','Select Next Line');
    tb.PrevLineBtn = t.addButton( ...
        phutils.icons.Icon.FAS_ARROW_UP_24(bg), 'tb_PrevLineBtn', ...
        'TooltipString','Select Previous Line');
    tb.FitProfileBtn = t.addButton( ...
        phutils.icons.Icon.FAS_WAVE_SQUARE_24(bg), 'tb_FitProfileBtn', ...
        'TooltipString','Fit line to profile');    
    t.addSection('ROIs');
    tb.AddROIBtn = t.addButton( ...
        phutils.icons.Icon.FAS_PLUS_24(bg), 'tb_AddROIBtn', ...
        'TooltipString', 'Add ROI');
    tb.FitLinesBtn = t.addButton( ...
        phutils.icons.Icon.FAS_WATER_24(bg), 'tb_FitLinesBtn', ...
        'TooltipString', 'Fit lines to selected ROIs');
    tb.FitPlaneBtn = t.addButton( ...
        phutils.icons.Icon.FAS_PROJECT_DIAGRAM_24(bg), 'tb_FitPlaneBtn', ...
        'TooltipString', 'Fit plane to vertices of selected ROIs');
    
    t.addSection('Data');
    ic = phutils.icons.Icon.FAS_SIGN_IN_ALT_24(bg);
    
    tb.DataResultAsBase = t.addButton(...
        ic(:, end:-1:1, :), 'tb_DataResultsAsBase', ...
        'TooltipString', 'Use result as new base');
        
    t.addSection('Filters');
    tb.FilterMedian = t.addButton( ...
        
    );
    
    self.GUI.Controls.Toolbar = tb;
    t.Parent = self.GUI.MainVB;
    
    t.Visible = 'on';
    self.GUI.Toolbar = t;
    